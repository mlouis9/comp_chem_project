&GLOBAL
  PROJECT UCl3_energy
  RUN_TYPE ENERGY
  PRINT_LEVEL MEDIUM
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    BASIS_SET_FILE_NAME BASIS_MOLOPT_AcPP1
    POTENTIAL_FILE_NAME CUSTOM_POTENTIALS
    PLUS_U_METHOD LOWDIN

    &MGRID
      NGRIDS 4
      CUTOFF 450
      REL_CUTOFF 60
    &END MGRID

    &QS
      EPS_DEFAULT 1.0E-10
    &END QS

    &SCF
      EPS_SCF      1.0E-6
      MAX_SCF      10
      SCF_GUESS    RESTART

      &OUTER_SCF
        EPS_SCF   1.0E-6 
        MAX_SCF   50
        OPTIMIZER DIIS
      &END OUTER_SCF

      &OT ON
        PRECONDITIONER FULL_SINGLE_INVERSE
        MINIMIZER DIIS
        ENERGY_GAP 100000
	STEPSIZE   5.0
      &END OT
    
    &END SCF

    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL

    &END XC
  &END DFT

  &SUBSYS
    &CELL
      ABC 12.38 12.38 12.38
    &END CELL

    @INCLUDE 'coord.inp'

    &KIND U
      ELEMENT U
      BASIS_SET DZVP-MOLOPT-GTH-q24
      POTENTIAL GTH-PBE-q24
      &DFT_PLUS_U on
        L            3             ! Angular momentum quantum number, 3 for f orbitals
        U_MINUS_J    4.0*0.03675   ! 4.0 eV â†’ 0.147 Ha
      &END DFT_PLUS_U
    &END KIND

    &KIND Cl
      ELEMENT Cl
      BASIS_SET DZVP-MOLOPT-GTH-q7
      POTENTIAL GTH-PBE-q7
    &END KIND
  &END SUBSYS
&END FORCE_EVAL