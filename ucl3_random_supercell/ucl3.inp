&GLOBAL
  PROJECT UCl3_energy
  RUN_TYPE ENERGY
  PRINT_LEVEL MEDIUM
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS

    &MGRID
      CUTOFF 400
      REL_CUTOFF 60
    &END MGRID

    &QS
      EPS_DEFAULT 1.0E-8
    &END QS

    &SCF
      EPS_SCF 1.0E-7
      MAX_SCF 200
      SCF_GUESS ATOMIC
    &END SCF

    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL

    &END XC
  &END DFT

  &SUBSYS
    &CELL
      ABC 10.0 10.0 10.0
      PERIODIC XYZ
    &END CELL

    &COORD
      @INCLUDE 'coord.inp'
    &END COORD

    &KIND U
      ELEMENT U
      BASIS_SET DZVP-MOLOPT-GTH-q14
      POTENTIAL GTH-PBE-q14
    &END KIND

    &KIND Cl
      ELEMENT Cl
      BASIS_SET DZVP-MOLOPT-GTH-q7
      POTENTIAL GTH-PBE-q7
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
