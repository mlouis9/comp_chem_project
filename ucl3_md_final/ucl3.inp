&GLOBAL
  PROJECT UCl3_md
  RUN_TYPE MD
  PRINT_LEVEL LOW
&END GLOBAL

&EXT_RESTART
  RESTART_FILE_NAME UCl3_md-1.restart
  RESTART_POS  TRUE
  RESTART_VEL  TRUE
  RESTART_CELL TRUE
&END EXT_RESTART

&MOTION
  &MD
    ENSEMBLE NVT
    STEPS 10000              ! 10000 steps × 2 fs = 20 ps
    TIMESTEP 2               ! 2 fs
    TEMPERATURE 1250
    &THERMOSTAT
      TYPE AD_LANGEVIN
      REGION MASSIVE
      &AD_LANGEVIN
        TIMECON_LANGEVIN  2.5   
        TIMECON_NH        100.0   ! 100 fs → moderate chain coupling
      &END AD_LANGEVIN
    &END THERMOSTAT
  &END MD

  &PRINT
    &TRAJECTORY
      FORMAT XYZ
      FILENAME  ucl3_md.xyz
      &EACH
        MD 10
      &END EACH
    &END TRAJECTORY

    &VELOCITIES ON
    &END VELOCITIES
  &END PRINT
&END MOTION

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    BASIS_SET_FILE_NAME BASIS_MOLOPT_AcPP1
    POTENTIAL_FILE_NAME CUSTOM_POTENTIALS
    PLUS_U_METHOD LOWDIN

    &MGRID
      NGRIDS 4
      CUTOFF 450
      REL_CUTOFF 60
    &END MGRID

    &QS
      EPS_DEFAULT 1.0E-10
    &END QS

    &SCF
      EPS_SCF      3.0E-7
      MAX_SCF      10000
      SCF_GUESS    RESTART

      !&OUTER_SCF
      !  EPS_SCF   1.5E-6 
      !  MAX_SCF   50000
      !  OPTIMIZER DIIS
      !&END OUTER_SCF

      &OT ON
        PRECONDITIONER FULL_SINGLE_INVERSE
        MINIMIZER CG
        ENERGY_GAP 0.1
      &END OT
    
    &END SCF

    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL

    &END XC
  &END DFT

  &SUBSYS
    &CELL
      ABC 12.38 12.38 12.38
    &END CELL

    @INCLUDE 'coord.inp'

    &KIND U
      ELEMENT U
      BASIS_SET DZVP-MOLOPT-GTH-q24
      POTENTIAL GTH-PBE-q24
      &DFT_PLUS_U on
        L            3             ! Angular momentum quantum number, 3 for f orbitals
        U_MINUS_J    4.0*0.03675   ! 4.0 eV → 0.147 Ha
      &END DFT_PLUS_U
    &END KIND

    &KIND Cl
      ELEMENT Cl
      BASIS_SET DZVP-MOLOPT-GTH-q7
      POTENTIAL GTH-PBE-q7
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
